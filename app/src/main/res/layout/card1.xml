<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="110dp"
    android:layout_height="190dp"
    android:layout_margin="2dp"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imgCourt"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:scaleType="fitXY"
            android:src="@drawable/tennis_courts" />

        <TextView
            android:id="@+id/tvCourtName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imgCourt"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:text="Tennis Lakeview"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/tvCourtDistance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvCourtName"
            android:layout_marginTop="4dp"
            android:layout_marginStart="5dp"
            android:text="11.2km"
            android:textColor="#595454"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/tvCourtPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvCourtDistance"
            android:layout_marginTop="4dp"
            android:layout_marginStart="5dp"
            android:text="50.000Ä‘/h"
            android:textColor="#595454"
            android:textSize="12dp" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>