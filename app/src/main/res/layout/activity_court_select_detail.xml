                                android:textColor="@color/black"
                                android:textSize="18sp"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/imgCardCourtSelect4" />

                            <TextView
                                android:id="@+id/txtCardCourseSize4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingStart="5dp"
                                android:text="Sân cỡ vừa"
                                android:textColor="@color/black"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintHorizontal_bias="0.0"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/txtCardCourseSelect4" />

                            <TextView
                                android:id="@+id/txtCardCoursePrizeRange4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
